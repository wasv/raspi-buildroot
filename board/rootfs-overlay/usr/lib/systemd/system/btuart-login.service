[Unit]
Description=Bluetooth UART Login
After=bluetooth.service
Requires=bluetooth.service

[Service]
ExecStartPre=/usr/bin/sdptool add SP
ExecStartPre=/bin/hciconfig hci0 piscan
ExecStart=/usr/bin/rfcomm watch hci0 1 getty rfcomm0 115200 vt100 -a pi

ExecStartPre=/usr/bin/sdptool del 0x1101

[Install]
WantedBy=multi-user.target
